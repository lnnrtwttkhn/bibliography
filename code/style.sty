
% select the language:
\usepackage[english,ngerman]{babel}
% for direct text quotes:
\usepackage{epigraph}
% import package to select multiple affiliations for authors:
\usepackage{authblk, xcolor}
% package comment for commenting out several lines of code at once:
\usepackage{comment}
% package to use symbols like \degree etc.
\usepackage{textcomp,gensymb}
% change spacing of lines:
\usepackage[onehalfspacing]{setspace}
% set hyperlinks:
\usepackage{hyperref}
\hypersetup{colorlinks=true, linkcolor=blue, citecolor=blue, pdfnewwindow=true, urlcolor=blue}
% create a glossary with recurring abbreviations:
\usepackage[toc, xindy, shortcuts, nonumberlist]{glossaries}
% use apacite to create apa-style citations:
\usepackage[sectionbib,numberedbib,bibnewpage]{apacite}
% remove URLs from bibliography:
\usepackage{etoolbox}
\renewenvironment{APACrefURL}[1][]{}{}
\AtBeginEnvironment{APACrefURL}{\renewcommand{\url}[1]{}}
\renewcommand{\doiprefix}{doi:~\kern-1pt}
% change DOIs to hyperlinks:
\newcommand*{\doi}[1]{\href{http://doi.org/#1}{#1}}
% stop apacite from showing both year and month in the references:
\AtBeginDocument{\renewcommand{\APACrefYearMonthDay}[3]{\BBOP{#1}\BBCP}}
% for creating apa-Style tables:
\usepackage{siunitx,booktabs} 
% package to include graphics
\usepackage{graphicx}
% use packages to print captions:
\usepackage{caption}
\usepackage{subcaption}
% convert .eps files to .pdf:
\usepackage{epstopdf}
% adjust the margins of the document:
\usepackage[a4paper, left=2cm, right=2cm, top=2cm, bottom=2cm]{geometry}
% Set default font to sans serif
\renewcommand{\familydefault}{\sfdefault}
% change math font to sans serif
\usepackage[italic]{mathastext}
% 'isomath' sets upper case greek letters italic in accordance
% with the International Standard ISO 80000-2
\usepackage{isomath}
% This command prevents hyperref from referencing the first time an acronym is used:
\renewcommand*{\glslinkcheckfirsthyperhook}{\ifglsused{\glslabel}{}{\ifglshaslong{\glslabel}{\setkeys{glslink}{hyper=false}}{}}} 
% This command turns all hyperrefs of acronyms to black:
\renewcommand*{\glstextformat}[1]{\textcolor{black}{#1}}
% define new macro in order to be able to include keywords
\providecommand{\keywords}[1]{\textbf{\textit{Keywords:}} #1}
