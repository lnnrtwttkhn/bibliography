	doi = {10.1101/2020.09.04.283002},
	elocation-id = {2020.09.04.283002},
	eprint = {https://www.biorxiv.org/content/early/2020/09/04/2020.09.04.283002.full.pdf},
	journal = {bioRxiv},
	publisher = {Cold Spring Harbor Laboratory},
	title = {Similarity of brain activity patterns during learning and subsequent resting state predicts memory consolidation},
