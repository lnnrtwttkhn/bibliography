	issn = {0306-4522},
	journal = {Neuroscience},
	keywords = {skill learning, motor learning, perceptual learning, memory, plasticity, interference, generalization},
	pages = {270 - 280},
	title = {Modulation of Learning and Memory: A Shared Framework for Interference and Generalization},
