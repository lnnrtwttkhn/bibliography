	author = {Friston, K.J. and Glaser, D.E. and Henson, R.N.A. and Kiebel, S. and Phillips, C. and Ashburner, J.},
	date-added = {2020-07-16 11:36:57 +0200},
	date-modified = {2020-07-16 11:38:09 +0200},
	doi = {10.1006/nimg.2002.1091},
	issn = {1053-8119},
	journal = {NeuroImage},
	month = {Jun},
	number = {2},
	pages = {484--512},
	publisher = {Elsevier BV},
	title = {Classical and Bayesian Inference in Neuroimaging: Applications},
