	keywords = {Hippocampus; Neocortex; Neural network; Interference; Learning algorithm; Theta Oscillations; Sleep; Consolidation},
	number = {9},
	pages = {1212--1228},
	title = {Methods for reducing interference in the Complementary Learning Systems model: Oscillating inhibition and autonomous memory rehearsal},
	ty = {JOUR},
