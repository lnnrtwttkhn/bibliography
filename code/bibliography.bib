	pages = {1322--1331},
	publisher = {Elsevier BV},
	title = {Sleep-dependent consolidation of statistical learning},
	url = {http://dx.doi.org/10.1016/j.neuropsychologia.2011.02.015},
	volume = {49},
	year = {2011},
