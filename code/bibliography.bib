	issn = {0896-6273},
	journal = {Neuron},
	number = {1},
	pages = {185 - 194},
	tags = {highspeed},
	title = {Tracking the Mind's Image in the Brain {I}: Time-Resolved {fMRI} during Visuospatial Mental Imagery},
	url = {http://www.sciencedirect.com/science/article/pii/S089662730200747X},
