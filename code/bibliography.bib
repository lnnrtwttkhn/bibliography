	month = {Jan},
	number = {1},
	pages = {101--128},
	publisher = {Annual Reviews},
	tags = {memory; review},
	title = {Reinforcement Learning and Episodic Memory in Humans and Animals: An Integrative Framework},
	url = {http://dx.doi.org/10.1146/annurev-psych-122414-033625},
	volume = {68},
	year = {2017},
