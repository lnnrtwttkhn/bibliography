	issn = {1053-8119},
	journal = {NeuroImage},
	month = {Jan},
	pages = {79--88},
	publisher = {Elsevier BV},
	title = {Microsaccade-related brain potentials signal the focus of visuospatial attention},
	url = {http://dx.doi.org/10.1016/j.neuroimage.2014.09.065},
	volume = {104},
