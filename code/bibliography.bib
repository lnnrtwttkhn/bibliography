	doi = {10.1523/JNEUROSCI.2901-04.2005},
	eprint = {https://www.jneurosci.org/content/25/6/1313.full.pdf},
	issn = {0270-6474},
	journal = {Journal of Neuroscience},
	number = {6},
	pages = {1313--1323},
	publisher = {Society for Neuroscience},
	title = {Sequential-Context-Dependent Hippocampal Activity Is Not Necessary to Learn Sequences with Repeated Elements},
	url = {https://www.jneurosci.org/content/25/6/1313},
	volume = {25},
	year = {2005},
