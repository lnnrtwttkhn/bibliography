	journal = {Hippocampus},
	keywords = {neurocomputation, computational models, representation, declarative memory, conditioning, connectionist models},
	number = {4},
	pages = {491-516},
	title = {Hippocampal mediation of stimulus representation: A computational theory},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/hipo.450030410},
	volume = {3},
	year = {1993},
