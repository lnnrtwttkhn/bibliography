	date-modified = {2020-03-31 14:28:12 +0200},
	doi = {10.1001/jamapsychiatry.2019.4788},
	issn = {2168-622X},
	journal = {JAMA Psychiatry},
	month = {Feb},
	publisher = {American Medical Association (AMA)},
	tags = {replay; computational ; disorders},
	title = {Is Hippocampal Replay a Mechanism for Anxiety and Depression?},
	url = {http://dx.doi.org/10.1001/jamapsychiatry.2019.4788},
	year = {2020},
