	number = {8},
	pages = {e1008118},
	publisher = {Public Library of Science ({PLoS})},
	title = {Presynaptic inhibition rapidly stabilises recurrent excitation in the face of plasticity},
	url = {https://doi.org/10.1371%2Fjournal.pcbi.1008118},
	volume = {16},
	year = 2020,
