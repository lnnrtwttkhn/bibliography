@article{Peyrache2011PNAS,
	abstract = {During light slow-wave sleep, the thalamo-cortical network oscillates in waxing-and-waning patterns at about 7 to 14 Hz and lasting for 500 ms to 3 s, called spindles, with the thalamus rhythmically sending strong excitatory volleys to the cortex. Concurrently, the hippocampal activity is characterized by transient and strong excitatory events, Sharp-Waves-Ripples (SPWRs), directly affecting neocortical activity{\textemdash}in particular the medial prefrontal cortex (mPFC){\textemdash}which receives monosynaptic fibers from the ventral hippocampus and subiculum. Both spindles and SPWRs have been shown to be strongly involved in memory consolidation. However, the dynamics of the cortical network during natural sleep spindles and how prefrontal circuits simultaneously process hippocampal and thalamo-cortical activity remain largely undetermined. Using multisite neuronal recordings in rat mPFC, we show that during sleep spindles, oscillatory responses of cortical cells are different for different cell types and cortical layers. Superficial neurons are more phase-locked and tonically recruited during spindle episodes. Moreover, in a given layer, interneurons were always more modulated than pyramidal cells, both in firing rate and phase, suggesting that the dynamics are dominated by inhibition. In the deep layers, where most of the hippocampal fibers make contacts, pyramidal cells respond phasically to SPWRs, but not during spindles. Similar observations were obtained when analyzing γ-oscillation modulation in the mPFC. These results demonstrate that during sleep spindles, the cortex is functionnaly {\textquotedblleft}deafferented{\textquotedblright} from its hippocampal inputs, based on processes of cortical origin, and presumably mediated by the strong recruitment of inhibitory interneurons. The interplay between hippocampal and thalamic inputs may underlie a global mechanism involved in the consolidation of recently formed memory traces.},
	author = {Peyrache, Adrien and Battaglia, Francesco P. and Destexhe, Alain},
	date-added = {2021-01-20 15:16:23 +0100},
	date-modified = {2021-01-20 15:16:42 +0100},
	doi = {10.1073/pnas.1103612108},
	eprint = {https://www.pnas.org/content/108/41/17207.full.pdf},
	issn = {0027-8424},
	journal = {Proceedings of the National Academy of Sciences},
	number = {41},
	pages = {17207--17212},
	publisher = {National Academy of Sciences},
	title = {Inhibition recruitment in prefrontal cortex during sleep spindles and gating of hippocampal inputs},
	url = {https://www.pnas.org/content/108/41/17207},
