	issn = {1053-8119},
	journal = {NeuroImage},
	keywords = {7T; Auditory cortex; Multivariate pattern analysis; Spatial resolution; Spatial smoothing; fMRI},
	month = {May},
	pages = {32--42},
	publisher = {Elsevier BV},
	title = {The effect of spatial resolution on decoding accuracy in {fMRI} multivariate pattern analysis},
	url = {http://dx.doi.org/10.1016/j.neuroimage.2016.02.033},
