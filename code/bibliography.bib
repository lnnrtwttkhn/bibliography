	pages = {E10167--E10176},
	publisher = {Proceedings of the National Academy of Sciences},
	title = {Dopaminergic basis for signaling belief updates, but not surprise, and the link to paranoia},
	url = {http://dx.doi.org/10.1073/pnas.1809298115},
	volume = {115},
	year = {2018},
