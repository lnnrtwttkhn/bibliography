	month = {Oct},
	number = {10},
	pages = {e1005730},
	publisher = {Public Library of Science (PLoS)},
	title = {Ten simple rules for writing a response to reviewers},
	url = {http://dx.doi.org/10.1371/journal.pcbi.1005730},
