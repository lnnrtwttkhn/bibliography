	Issn = {10509631},
	Journal = {Hippocampus},
	Keywords = {attention,medial temporal lobe,relational representations,representational similarity analysis},
	Pages = {21755},
	Title = {{Focusing on what matters: Modulation of the human hippocampus by relational attention}},
