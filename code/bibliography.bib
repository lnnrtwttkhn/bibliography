	journal = {Experimental Brain Research},
	number = {1},
	pages = {15--26},
	title = {Contribution of night and day sleep vs. simple passage of time to the consolidation of motor sequence and visuomotor adaptation learning},
	url = {https://doi.org/10.1007/s00221-009-1748-y},
