	eprint = {https://www.jneurosci.org/content/26/51/13143.full.pdf},
	issn = {0270-6474},
	journal = {Journal of Neuroscience},
	number = {51},
	pages = {13143--13155},
	publisher = {Society for Neuroscience},
	title = {Apparent Encoding of Sequential Context in Rat Medial Prefrontal Cortex Is Accounted for by Behavioral Variability},
