	issn = {0306-4522},
	journal = {Neuroscience},
	keywords = {exploration, microdialysis, motor activity},
	number = {1},
	pages = {43 - 53},
	title = {Effects of novelty and habituation on acetylcholine, GABA, and glutamate release from the frontal cortex and hippocampus of freely moving rats},
