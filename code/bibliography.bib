	issn = {1053-8119},
	journal = {NeuroImage},
	month = {Feb},
	number = {3},
	pages = {2733--2742},
	publisher = {Elsevier BV},
	title = {Sleep spindle-related reactivation of category-specific cortical regions after learning face-scene associations},
	url = {http://dx.doi.org/10.1016/j.neuroimage.2011.10.036},
	volume = {59},
	year = {2012},
