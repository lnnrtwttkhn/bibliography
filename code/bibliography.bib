	issn = {0270-6474},
	journal = {Journal of Neuroscience},
	keywords = {medial temporal lobes, hippocampus, entorhinal cortex, perirhinal cortex, short-term memory, working memory, spatial memory},
	number = {1},
	pages = {116--124},
	publisher = {Society for Neuroscience},
	title = {Medial Temporal Lobe Activity Predicts Successful Relational Memory Binding},
	url = {https://www.jneurosci.org/content/28/1/116},
