	journal = {Nature Communications},
	number = {1},
	pages = {4069},
	title = {Brain-inspired replay for continual learning with artificial neural networks},
	url = {https://doi.org/10.1038/s41467-020-17866-2},
	volume = {11},
	year = {2020},
