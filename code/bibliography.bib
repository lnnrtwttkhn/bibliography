	elocation-id = {1578-18},
	eprint = {https://www.jneurosci.org/content/early/2019/01/25/JNEUROSCI.1578-18.2018.full.pdf},
	issn = {0270-6474},
	journal = {Journal of Neuroscience},
	publisher = {Society for Neuroscience},
	title = {Insensitivity of place cells to the value of spatial goals in a two-choice flexible navigation task},
