	publisher = {Society for Neuroscience},
	tags = {replay; ripples},
	title = {Hippocampal Ripple-Contingent Training Accelerates Trace Eyeblink Conditioning and Retards Extinction in Rabbits},
	url = {http://dx.doi.org/10.1523/JNEUROSCI.2165-10.2010},
	volume = {30},
	year = {2010},
