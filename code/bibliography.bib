	tags = {statistical learning},
	title = {Transitive Inference: Distinct Contributions of Rostrolateral Prefrontal Cortex and the Hippocampus},
	url = {https://doi.org/10.1162/jocn.2009.21226},
	volume = {22},
	year = {2010},
