	doi = {10.1002/hipo.450040319},
	issn = {1098-1063},
	journal = {Hippocampus},
	month = {Jun},
	number = {3},
	pages = {374--391},
	publisher = {Wiley},
	title = {Computational analysis of the role of the hippocampus in memory},
