	issn = {1098-1063},
	journal = {Hippocampus},
	number = {1},
	pages = {1--16},
	publisher = {Wiley},
	tags = {replay; modeling},
	title = {A model of hippocampally dependent navigation, using the temporal difference learning rule},
	url = {http://dx.doi.org/10.1002/(SICI)1098-1063(2000)10:1<1::AID-HIPO1>3.0.CO;2-1},
