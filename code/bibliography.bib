	month = {Aug},
	number = {32},
	pages = {10087--10093},
	publisher = {Society for Neuroscience},
	tags = {memory; human; fMRI},
	title = {Shift from Hippocampal to Neocortical Centered Retrieval Network with Consolidation},
	url = {http://dx.doi.org/10.1523/jneurosci.0799-09.2009},
	volume = {29},
	year = {2009},
