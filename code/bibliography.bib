	journal = {PLOS ONE},
	month = {12},
	number = {12},
	pages = {1-15},
	publisher = {Public Library of Science},
	title = {Failure to demonstrate short-cutting in a replication and extension of Tolman et al.'s spatial learning experiment with humans},
	url = {https://doi.org/10.1371/journal.pone.0208794},
	volume = {13},
	year = {2018},
