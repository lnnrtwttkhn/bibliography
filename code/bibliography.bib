	eprint = {https://www.biorxiv.org/content/early/2020/10/21/2020.10.20.343061.full.pdf},
	journal = {bioRxiv},
	publisher = {Cold Spring Harbor Laboratory},
	title = {Experience replay supports non-local learning},
