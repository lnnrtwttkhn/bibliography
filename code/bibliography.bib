	Journal = {Proceedings of the National Academy of Sciences},
	Keywords = {Adolescent,Adult,Female,Humans,Logic,Male,Memory,Memory: physiology,Sleep,Sleep: physiology,Time Factors,Wakefulness},
	Number = {18},
