@article{Oudiette2013TCS,
	abstract = {A fundamental feature of human memory is the propensity for beneficial changes in information storage after initial encoding. Recent research findings favor the possibility that memory consolidation during sleep is instrumental for actively maintaining the storehouse of memories that individuals carry through their lives. The information that ultimately remains available for retrieval may tend to be that which is reactivated during sleep. A novel source of support for this idea comes from demonstrations that neurocognitive processing during sleep can benefit memory storage when memories are covertly cued via auditory or olfactory stimulation. Investigations of these subtle manipulations of memory processing during sleep can help elucidate the mechanisms of memory preservation in the human brain.},
	author = {Oudiette, Delphine and Paller, Ken A.},
