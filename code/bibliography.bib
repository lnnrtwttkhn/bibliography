	keywords = {resting state, memory consolidation, reactivation, hippocampal-cortical interactions, transcranial magnetic stimulation, causal manipulations, awake rest, lateral occipital cortex, hippocampus, fMRI-TMS},
	number = {18},
	pages = {3533 - 3543.e7},
	title = {Causal Contribution of Awake Post-encoding Processes to Episodic Memory Consolidation},
