	date-modified = {2020-12-30 17:13:15 +0100},
	doi = {10.1002/hipo.450040605},
	journal = {Hippocampus},
	keywords = {memory, mathematical models, pattern separation, pattern completion, computer simulation},
	number = {6},
	pages = {661-682},
	title = {Hippocampal conjunctive encoding, storage, and recall: Avoiding a trade-off},
