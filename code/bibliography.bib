	doi = {10.1016/j.neuron.2010.01.034},
	issn = {0896-6273},
	journal = {Neuron},
	number = {5},
	pages = {695 - 705},
	title = {Hippocampal Replay Is Not a Simple Function of Experience},
	url = {http://www.sciencedirect.com/science/article/pii/S0896627310000607},
