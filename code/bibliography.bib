	journal = {Neuropsychologia},
	month = {oct},
	number = {12},
	pages = {2371--2388},
	publisher = {Elsevier {BV}},
	title = {Moderate levels of activation lead to forgetting in the think/no-think paradigm},
	url = {https://doi.org/10.1016/j.neuropsychologia.2013.02.017},
	volume = {51},
	year = 2013,
