	publisher = {Elsevier BV},
	tags = {MRI; methods},
	title = {Hemodynamic nonlinearities affect {BOLD} {fMRI} response timing and amplitude},
	url = {http://dx.doi.org/10.1016/j.neuroimage.2009.06.001},
	volume = {47},
	year = {2009},
