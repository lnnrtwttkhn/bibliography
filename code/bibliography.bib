	issn = {0270-6474},
	journal = {Journal of Neuroscience},
	number = {49},
	pages = {11789--11805},
	publisher = {Society for Neuroscience},
	title = {Hippocampal-Prefrontal Reactivation during Learning Is Stronger in Awake Compared with Sleep States},
