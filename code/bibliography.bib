	issn = {1050-9631},
	journal = {Hippocampus},
	month = {Mar},
	number = {5},
	pages = {580--595},
	publisher = {Wiley},
	tags = {replay; methods},
	title = {Optimizing for generalization in the decoding of internally generated activity in the hippocampus},
	url = {http://dx.doi.org/10.1002/hipo.22714},
