	journal = {Current Biology},
	month = {Nov},
	number = {22},
	pages = {3499--3504.e4},
	publisher = {Elsevier BV},
	title = {Event Boundaries Trigger Rapid Memory Reinstatement of the Prior Events to Promote Their Representation in Long-Term Memory},
	url = {http://dx.doi.org/10.1016/j.cub.2017.09.057},
	volume = {27},
